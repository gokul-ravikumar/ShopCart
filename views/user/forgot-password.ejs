        <form method="post" action="/user/forgotPassword" class="space-y-4">

          <div class="space-y-2">
            <label class="block text-sm font-medium">Phone Number</label>
            <input
              type="phone"
              name="phone"
              placeholder="Enter your registered Phone Number"
              class="w-full border rounded px-3 py-2" 
              required
            />
          </div>

          <button
            type="submit"
            class="w-full px-4 py-2 rounded bg-orange-600 hover:bg-orange-700 text-white font-medium"
          >
