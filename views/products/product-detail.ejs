<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= product.title %> | ShopCart</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 text-gray-900 font-inter min-h-screen">

  <div class="max-w-6xl mx-auto p-8">
    <!-- Back Button -->
    <a href="/product" class="inline-block mb-6 text-gray-600 hover:text-blue-600 transition">
      ← Back to Products
    </a>

    <!-- Product Layout -->
    <div class="bg-white rounded-2xl shadow-md p-8 flex flex-col md:flex-row gap-8">
      <!-- Left: Image -->
      <div class="md:w-1/2 flex justify-center items-center">
        <img src="<%- product.image[0].url %>"
             alt="<%- product.image[0].filename %>"
             class="rounded-lg w-full h-auto object-cover shadow-sm">
      </div>

      <!-- Right: Details -->
      <div class="md:w-1/2 flex flex-col justify-between">
        <div>
          <h1 class="text-3xl font-bold mb-3"><%= product.title %></h1>
          <div class="flex items-center gap-2 mb-4">
            <span class="text-yellow-400 text-lg">★</span>
            <span class="text-gray-700 font-medium">
              <%= product.rating ? product.rating.toFixed(1) : (Math.random() * 2 + 3).toFixed(1) %> / 5
            </span>
          </div>
          <p class="text-gray-700 mb-6 leading-relaxed">
            <%= product.description %>
          </p>
        </div>

        <div>
          <p class="text-2xl font-semibold text-orange-600 mb-5">$<%= product.price %></p>
          <button
            class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-medium shadow-md transition transform hover:-translate-y-0.5">
            Add to Cart
          </button>
          <button
            class="bg-orange-600 hover:bg-orange-700 text-white px-6 py-3 rounded-lg font-medium shadow-md transition transform hover:-translate-y-0.5">
            Buy Now
          </button>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
